@model FinalProject.Models.Lifters

<div class="modal fade" id="addNewLifter" tabindex="-1" role="dialog" aria-labelledby="addNewLifterLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="Create">
                <div class="modal-header">
                    <h5 class="modal-title" id="addNewLifterLabel">Add New Lifter</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Lifter Name</span>
                        </div>
                        <input type="text" class="form-control" asp-for="liftername" placeholder="Lifter Name" aria-label="Liftername">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Average Squat</span>
                        </div>
                        <input type="text" class="form-control" asp-for="squat" placeholder="Average Squat" aria-label="averageSquat" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <span class="input-group-text" id="basic-addon2">lbs</span>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Average Bench</span>
                        </div>
                        <input type="text" class="form-control" asp-for="bench" placeholder="Average Bench" aria-label="averageBench" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <span class="input-group-text" id="basic-addon2">lbs</span>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Average Deadlift</span>
                        </div>
                        <input type="text" class="form-control" asp-for="deadlift" placeholder="Average Deadlift" aria-label="averageDeadlift" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <span class="input-group-text" id="basic-addon2">lbs</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>